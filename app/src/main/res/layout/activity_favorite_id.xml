<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="Deprecated" >


    <EditText
        android:id="@+id/favoriteName"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_x="16dp"
        android:layout_y="97dp"
        android:ems="10"
        android:hint="Name for Favorite"
        android:inputType="textPersonName"
        tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,UnknownIdInLayout" />

    <Button
        android:id="@+id/Enter"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favoriteName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_x="102dp"
        android:layout_y="457dp"
        android:text="Enter"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

</RelativeLayout>